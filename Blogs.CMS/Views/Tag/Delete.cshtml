@model Blogs.CMS.Controllers.Params.DeleteTagParams
@{

}
<div class="modal-content">
    <div class="modal-header border-bottom-0">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="modal-body">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Bạn có chắc muốn xóa tag này không?</h1>
            </div>
            <!-- /.col-lg-12 -->
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row">
                            @using (Html.BeginForm("Delete", "Tag", FormMethod.Post, new { @role = "form" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.ValidationSummary(true)
                                @Html.HiddenFor(model => model.Id)

                                <div class="col-lg-6">
                                    <button type="submit" class="btn btn-info btn-block btn-round">Xóa</button>
                                </div>
                                <div class="col-lg-6">
                                    <button type="button" class="btn btn-danger btn-block btn-round" data-dismiss="modal">Hủy</button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

